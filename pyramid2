package patterns;
import java.util.*;

public class pattern3 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		int r=sc.nextInt();
		int c=sc.nextInt();
		int n=r;
		for(int i=0;i<=r;i++)
		{
			for(int j=0;j<=c;j++)
			{
				if(j<=n)
					System.out.print("*");
				else
					System.out.print(" ");
				
			}
			n--;
			System.out.println();
		}
		

	}

}
