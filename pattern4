package patterns;
import java.util.*;

public class pattern4 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		int r=sc.nextInt();
//		int c=sc.nextInt();
//		int n=r;
		for(int i=r-1;i>=0;i--)
		{
			for(int j=r-1;j>=0;j--)
			{
				if(j<=i)
					System.out.print("*");
				else
					System.out.print(" ");
				
			}
			
			System.out.println();
		}
		

	}

}
