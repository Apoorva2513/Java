package patterns;
import java.util.*;

public class pattern8 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		int r=sc.nextInt();
//		int c=sc.nextInt();
		int v=1;
		for(int i=0;i<r;i++)
		{
			for(int j=0;j<r;j++)
			{
				if(j<i)
				{
					System.out.print(v+" ");
					v++;
				}
				else
					System.out.print(" ");
				
				
			}
			System.out.println();
		}
	}
}


